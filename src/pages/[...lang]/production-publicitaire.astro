---
import { useTranslations } from "../../i18n/utils";

export function getStaticPaths() {
    return [
        { params: { lang: undefined } }, // French (default)
        { params: { lang: "en" } }, // English
    ];
}

const { lang } = Astro.params;
const currentLang = (lang || "fr") as "fr" | "en";
const t = useTranslations(currentLang);

// Page configuration
const pageConfig = {
    images: {
        main: "bts-chicago-malinki-lighting-2025-16-9_compressed.webp",
        sidebar: "camera-photo-l1000571_compressed.webp",
        testimonial: "laurence-gb-omy-testimony.jpg",
        row: [
            "ville-de-laval-malinki-web-pub-2025_compressed.webp",
            "maddle-malinki-pub-product-2024.jpg",
            "BTS_ETOILBYSTARR_MALINKI_PUB_2025-min_compressed.webp",
        ],
        feature: "tva-sport-malinki-pub-2022_compressed.webp",
        bts: [
            "bts-cook-it-malinki-pub-2022-alt.jpg",
            "bts-omy-laboratories-malinki-pub-2024_compressed.webp",
            "bts-opera-de-montreal-malinki-pub-2022.jpg",
            "petro-canada-malinki-olympics-2024-bts_compressed.webp",
        ],
        clientsDesktop: "Logos_Clients_Malinki_Pub_2025.png",
        clientsMobile: "Logos_Clients_Malinki_PubMobile_2025.png",
        prods: "bts-keywords-malinki-web-2022.jpg",
    },
    youtubeVideos: [
        "https://www.youtube.com/embed/o7DzDbBcWAc?playlist=o7DzDbBcWAc&controls=0&rel=0&playsinline=1&modestbranding=1&cc_load_policy=0&autoplay=1&vf=1&mute=1&loop=1&iv_load_policy=3",
        "https://www.youtube.com/embed/yOKPgKId_kw?playlist=yOKPgKId_kw&controls=0&rel=0&playsinline=1&modestbranding=1&cc_load_policy=0&autoplay=1&vf=1&mute=1&loop=1&iv_load_policy=3",
        "https://www.youtube.com/embed/7YHWMHCa4HY?playlist=7YHWMHCa4HY&controls=0&rel=0&playsinline=1&modestbranding=1&cc_load_policy=0&autoplay=1&vf=1&mute=1&loop=1&iv_load_policy=3",
        "https://www.youtube.com/embed/GSTCE2YNgHE?playlist=GSTCE2YNgHE&controls=0&rel=0&playsinline=1&modestbranding=1&cc_load_policy=0&autoplay=1&vf=1&mute=1&loop=1&iv_load_policy=3",
        "https://www.youtube.com/embed/GZxNF88h0Wg?playlist=GZxNF88h0Wg&controls=0&rel=0&playsinline=1&modestbranding=1&cc_load_policy=0&autoplay=1&vf=1&mute=1&loop=1&iv_load_policy=3",
        "https://www.youtube.com/embed/MwlZRgrxefc?playlist=MwlZRgrxefc&controls=0&rel=0&playsinline=1&modestbranding=1&cc_load_policy=0&autoplay=1&vf=1&mute=1&loop=1&iv_load_policy=3",
    ],
    links: {
        cta: `/${currentLang === "fr" ? "" : "en/"}contact`,
        demoReel: "https://vimeo.com/912326021",
        prodsButton: `/${currentLang === "fr" ? "" : "en/"}contact`,
    },
};

import "../../styles/global.css";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
---

<html lang={currentLang} class="h-full">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{t("production_publicitaire.title")} - Malinki</title>
    </head>
    <body class="min-h-full w-full font-['Montserrat'] bg-[#E6F5F7]">
        <Header lang={currentLang} />

        <div class="w-full flex flex-col 2xl:max-w-[1600px] mx-auto">
            <div
                class="mx-auto pt-5 lg:pt-20 text-[#135560]"
                style="font-family: 'Rotunda Black', Montserrat, sans-serif;"
            >
                <div class="mt-12"></div>

                <!-- Hero Section -->
                <div
                    class="px-3 lg:px-10 flex flex-wrap animate__animated animate__fast animate__fadeIn"
                >
                    <div class="w-full lg:w-3/5 lg:pr-5">
                        <p
                            class="text-4xl md:text-5xl xl:text-6xl 2xl:text-7xl font-bold text-[#083e44] mb-8 leading-tight"
                        >
                            {t("production_publicitaire.title")}
                        </p>
                        <img
                            src={`/assets/${pageConfig.images.main}`}
                            alt={t("production_publicitaire.main_image_alt")}
                            width="800"
                            height="600"
                            class="w-full rounded-sm mt-6 object-cover"
                            loading="lazy"
                        />
                    </div>
                    <div class="w-full lg:w-2/5 mt-5 md:mt-0">
                        <div
                            class="flex flex-col-reverse md:flex md:flex-row md:items-start lg:flex-col"
                        >
                            <div
                                class="md:w-1/2 lg:w-full md:order-2 lg:order-1 mt-10 md:mt-0"
                            >
                                <img
                                    src={`/assets/${pageConfig.images.sidebar}`}
                                    alt={t(
                                        "production_publicitaire.sidebar_image_alt",
                                    )}
                                    width="400"
                                    height="300"
                                    class="w-full rounded-sm mb-8 object-cover"
                                    loading="lazy"
                                />
                            </div>
                            <div
                                class="md:w-1/2 lg:w-full md:order-1 lg:order-2 md:pr-6 lg:pr-0"
                            >
                                <div
                                    class="text-lg md:text-base xl:text-xl 2xl:text-2xl font-medium mb-8"
                                >
                                    {t("production_publicitaire.description")}
                                </div>
                                <a
                                    href={pageConfig.links.cta}
                                    class="inline-block text-white font-bold text-lg md:text-base xl:text-xl 2xl:text-2xl px-6 md:px-8 py-3 md:py-4 rounded-lg shadow-sm transition-colors duration-200 uppercase tracking-wide"
                                    style="background-color: #083e44;"
                                >
                                    {t("production_publicitaire.cta_text")}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Testimonial -->
                <div
                    class="px-3 lg:px-10 pt-16 lg:pt-28 lg:my-10 animate__animated animate__fadeIn animate__fast"
                >
                    <div class="flex flex-wrap items-center md:px-1">
                        <div class="w-full md:w-2/3 min-w-[320px]">
                            <p
                                class="text-3xl md:text-2xl xl:text-3xl 2xl:text-4xl font-semibold mb-6 mt-0 text-[#083e44]"
                            >
                                {t("production_publicitaire.testimonial_text")}
                            </p>
                            <div
                                class="mt-2 md:mt-0 text-xl md:text-lg xl:text-xl 2xl:text-2xl text-[#083e44] font-bold"
                            >
                                {
                                    t(
                                        "production_publicitaire.testimonial_author",
                                    )
                                }
                            </div>
                            <div
                                class="mt-2 md:mt-0 text-lg md:text-base xl:text-lg 2xl:text-xl"
                            >
                                {t("production_publicitaire.testimonial_role")}
                            </div>
                        </div>
                        <div
                            class="w-full md:w-1/3 flex justify-center items-center mt-6 md:mt-0"
                        >
                            <img
                                src={`/assets/${pageConfig.images.testimonial}`}
                                alt={t(
                                    "production_publicitaire.testimonial_image_alt",
                                )}
                                width="160"
                                height="160"
                                class="w-40 h-40 2xl:w-60 2xl:h-60 object-cover rounded-full md:ml-10"
                                loading="lazy"
                            />
                        </div>
                    </div>
                </div>

                <!-- Campaign Images Row -->
                <div
                    class="px-3 lg:px-10 pt-16 lg:pt-28 animate__animated animate__fadeIn"
                >
                    <div class="w-full flex flex-col lg:flex-row gap-4">
                        {
                            pageConfig.images.row.map((image, index) => (
                                <div class="w-full lg:w-1/3">
                                    <img
                                        src={`/assets/${image}`}
                                        alt={t(
                                            `production_publicitaire.row_image_${index + 1}_alt`,
                                        )}
                                        width="600"
                                        height="400"
                                        class="w-full rounded-sm object-cover h-full"
                                        loading="lazy"
                                    />
                                </div>
                            ))
                        }
                    </div>
                </div>

                <!-- Feature Section -->
                <div class="px-3 lg:px-10 pt-16 lg:pt-28">
                    <div
                        class="mx-auto flex flex-col lg:flex-row items-center lg:items-start gap-8"
                    >
                        <div
                            class="w-full lg:w-1/2 flex flex-col justify-center items-start"
                        >
                            <p
                                class="text-xl md:text-2xl xl:text-3xl 2xl:text-4xl font-extrabold text-[#083e44] mb-6 leading-tight uppercase"
                            >
                                {t("production_publicitaire.headline_line1")}
                                <br />
                                {t("production_publicitaire.headline_line2")}
                            </p>
                            <p
                                class="text-base md:text-lg xl:text-xl 2xl:text-2xl mb-4 font-medium"
                            >
                                {t("production_publicitaire.paragraph1")}
                            </p>
                            <p
                                class="text-base md:text-lg xl:text-xl 2xl:text-2xl mb-8 font-medium"
                            >
                                {t("production_publicitaire.paragraph2")}
                            </p>
                            <a
                                href={pageConfig.links.demoReel}
                                target="_blank"
                                class="mt-4 inline-block text-white font-bold text-base md:text-lg xl:text-xl 2xl:text-2xl px-6 md:px-8 py-3 md:py-4 rounded-lg shadow transition-colors duration-200 uppercase tracking-wide"
                                style="background-color: #083e44;"
                            >
                                {t("production_publicitaire.button_text")}
                            </a>
                        </div>
                        <div class="w-full lg:w-1/2">
                            <img
                                src={`/assets/${pageConfig.images.feature}`}
                                alt={t(
                                    "production_publicitaire.feature_image_alt",
                                )}
                                class="rounded-sm w-full object-cover"
                                width="800"
                                height="400"
                                loading="lazy"
                            />
                        </div>
                    </div>
                </div>

                <!-- Productions (YouTube Videos) -->
                <div class="px-3 lg:px-10 pt-16 lg:pt-28">
                    <p
                        class="text-2xl md:text-3xl xl:text-4xl 2xl:text-5xl font-extrabold uppercase text-[#083e44]"
                    >
                        {t("production_publicitaire.productions_title")}
                    </p>
                    <div
                        class="pb-5 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-8"
                    >
                        {
                            pageConfig.youtubeVideos.map((videoUrl) => (
                                <div class="aspect-video w-full">
                                    <iframe
                                        class="rounded-sm w-full h-full"
                                        frameborder="0"
                                        allowfullscreen
                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                        referrerpolicy="strict-origin-when-cross-origin"
                                        src={videoUrl}
                                    />
                                </div>
                            ))
                        }
                    </div>
                </div>

                <!-- Behind the Scenes -->
                <div class="px-3 lg:px-10 pt-16 lg:pt-28">
                    <p
                        class="text-2xl md:text-3xl xl:text-4xl 2xl:text-5xl font-extrabold uppercase text-[#083e44]"
                    >
                        {t("production_publicitaire.behind_scenes_title")}
                    </p>
                    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 mt-8">
                        {
                            pageConfig.images.bts.map((image, index) => (
                                <img
                                    src={`/assets/${image}`}
                                    alt={t(
                                        `production_publicitaire.bts_image_${index + 1}_alt`,
                                    )}
                                    width="400"
                                    height="400"
                                    class="w-full h-full rounded-sm object-cover"
                                    loading="lazy"
                                />
                            ))
                        }
                    </div>
                </div>

                <!-- Client Logos -->
                <div class="px-3 lg:px-10 pt-16 lg:pt-28">
                    <p
                        class="text-2xl md:text-3xl xl:text-4xl 2xl:text-5xl font-extrabold uppercase text-[#083e44] mb-6"
                    >
                        {t("production_publicitaire.clients_title")}
                    </p>
                    <div class="flex justify-center items-center mt-20">
                        <img
                            src={`/assets/${pageConfig.images.clientsDesktop}`}
                            alt={t("production_publicitaire.clients_image_alt")}
                            width="1200"
                            height="1200"
                            class="w-full hidden lg:block h-full rounded-sm"
                            loading="lazy"
                        />
                        <img
                            src={`/assets/${pageConfig.images.clientsMobile}`}
                            alt={t("production_publicitaire.clients_image_alt")}
                            width="1200"
                            height="1200"
                            class="w-full block lg:hidden h-full rounded-sm"
                            loading="lazy"
                        />
                    </div>
                </div>

                <!-- Products Section -->
                <div class="px-3 lg:px-10 pt-16 lg:pt-28 mb-20">
                    <div class="flex flex-col lg:flex-row items-center gap-12">
                        <div class="w-full lg:w-1/2 flex flex-col items-start">
                            <p
                                class="text-2xl md:text-3xl xl:text-4xl 2xl:text-5xl font-extrabold uppercase text-[#083e44] mb-6"
                            >
                                {t("production_publicitaire.prods_title")}
                            </p>
                            <div class="mt-2">
                                <div class="mb-6">
                                    <p
                                        class="text-lg md:text-xl xl:text-2xl 2xl:text-3xl font-extrabold mb-1 uppercase text-[#083e44]"
                                    >
                                        {
                                            t(
                                                "production_publicitaire.prods_subtitle_1",
                                            )
                                        }
                                    </p>
                                    <p
                                        class="text-base md:text-lg xl:text-xl 2xl:text-2xl font-medium"
                                    >
                                        {
                                            t(
                                                "production_publicitaire.prods_text_1",
                                            )
                                        }
                                    </p>
                                </div>
                                <div class="mb-6">
                                    <p
                                        class="text-lg md:text-xl xl:text-2xl 2xl:text-3xl font-extrabold mb-1 uppercase text-[#083e44]"
                                    >
                                        {
                                            t(
                                                "production_publicitaire.prods_subtitle_2",
                                            )
                                        }
                                    </p>
                                    <p
                                        class="text-base md:text-lg xl:text-xl 2xl:text-2xl font-medium"
                                    >
                                        {
                                            t(
                                                "production_publicitaire.prods_text_2",
                                            )
                                        }
                                    </p>
                                </div>
                                <div class="mb-6">
                                    <p
                                        class="text-lg md:text-xl xl:text-2xl 2xl:text-3xl font-extrabold mb-1 uppercase text-[#083e44]"
                                    >
                                        {
                                            t(
                                                "production_publicitaire.prods_subtitle_3",
                                            )
                                        }
                                    </p>
                                    <p
                                        class="text-base md:text-lg xl:text-xl 2xl:text-2xl font-medium"
                                    >
                                        {
                                            t(
                                                "production_publicitaire.prods_text_3",
                                            )
                                        }
                                    </p>
                                </div>
                            </div>
                            <a
                                href={pageConfig.links.prodsButton}
                                class="inline-block text-white font-extrabold text-base md:text-lg xl:text-xl 2xl:text-2xl px-6 md:px-8 py-3 md:py-6 rounded-lg shadow transition-colors duration-200 uppercase tracking-wide"
                                style="background-color: #083e44;"
                            >
                                {t("production_publicitaire.prods_button_text")}
                            </a>
                        </div>
                        <div class="mt-0 lg:mt-0 w-full lg:w-1/2">
                            <img
                                src={`/assets/${pageConfig.images.prods}`}
                                alt={t(
                                    "production_publicitaire.prods_image_alt",
                                )}
                                width="600"
                                height="400"
                                class="w-full rounded-sm object-cover"
                                loading="lazy"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <Footer />
    </body>
</html>

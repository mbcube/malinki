---
import { useTranslations } from "../../i18n/utils";

export function getStaticPaths() {
    return [
        { params: { lang: undefined } }, // French (default)
        { params: { lang: "en" } }, // English
    ];
}

const { lang } = Astro.params;
const currentLang = (lang || "fr") as "fr" | "en";
const t = useTranslations(currentLang);

import "../../styles/global.css";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
---

<html lang={currentLang} class="h-full">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{t("contact.title")} - Malinki</title>
    </head>
    <body class="min-h-full w-full font-['Montserrat'] bg-[#E6F5F7]">
        <Header lang={currentLang} />

        <div class="w-full flex flex-col 2xl:max-w-[1600px] mx-auto">
            <div
                class="mx-auto pt-20 lg:pt-32 pb-20 text-[#135560] px-6 lg:px-10"
                style="font-family: 'Rotunda Black', Montserrat, sans-serif;"
            >
                <!-- Hero Section -->
                <div
                    class="max-w-4xl mx-auto text-center mb-16 animate__animated animate__fadeIn"
                >
                    <h1
                        class="text-5xl md:text-6xl lg:text-7xl font-bold text-[#083e44] mb-6 leading-tight"
                    >
                        {t("contact.heading")}
                    </h1>
                    <p
                        class="text-lg md:text-xl lg:text-2xl text-[#083e44] font-medium max-w-2xl mx-auto"
                    >
                        {t("contact.subheading")}
                    </p>
                </div>

                <!-- Contact Form & Info Grid -->
                <div
                    class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16"
                >
                    <!-- Contact Form -->
                    <div
                        class="bg-white rounded-2xl shadow-xl p-8 md:p-10 animate__animated animate__fadeInLeft"
                    >
                        <h2
                            class="text-2xl md:text-3xl font-bold text-[#083e44] mb-6"
                        >
                            {t("contact.form_title")}
                        </h2>

                        <form class="space-y-6" id="contact-form">
                            <!-- Name -->
                            <div>
                                <label
                                    for="name"
                                    class="block text-sm font-semibold text-[#083e44] mb-2"
                                >
                                    {t("contact.name_label")}
                                </label>
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    required
                                    class="w-full px-4 py-3 border-2 border-[#E6F5F7] rounded-lg focus:border-[#083e44] focus:outline-none transition-colors duration-200 text-[#083e44]"
                                    placeholder={t("contact.name_placeholder")}
                                />
                            </div>

                            <!-- Email -->
                            <div>
                                <label
                                    for="email"
                                    class="block text-sm font-semibold text-[#083e44] mb-2"
                                >
                                    {t("contact.email_label")}
                                </label>
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                    class="w-full px-4 py-3 border-2 border-[#E6F5F7] rounded-lg focus:border-[#083e44] focus:outline-none transition-colors duration-200 text-[#083e44]"
                                    placeholder={t("contact.email_placeholder")}
                                />
                            </div>

                            <!-- Phone -->
                            <div>
                                <label
                                    for="phone"
                                    class="block text-sm font-semibold text-[#083e44] mb-2"
                                >
                                    {t("contact.phone_label")}
                                </label>
                                <input
                                    type="tel"
                                    id="phone"
                                    name="phone"
                                    class="w-full px-4 py-3 border-2 border-[#E6F5F7] rounded-lg focus:border-[#083e44] focus:outline-none transition-colors duration-200 text-[#083e44]"
                                    placeholder={t("contact.phone_placeholder")}
                                />
                            </div>

                            <!-- Message -->
                            <div>
                                <label
                                    for="message"
                                    class="block text-sm font-semibold text-[#083e44] mb-2"
                                >
                                    {t("contact.message_label")}
                                </label>
                                <textarea
                                    id="message"
                                    name="message"
                                    required
                                    rows="5"
                                    class="w-full px-4 py-3 border-2 border-[#E6F5F7] rounded-lg focus:border-[#083e44] focus:outline-none transition-colors duration-200 resize-none text-[#083e44]"
                                    placeholder={t(
                                        "contact.message_placeholder",
                                    )}></textarea>
                            </div>

                            <!-- Submit Button -->
                            <button
                                type="submit"
                                class="w-full bg-[#083e44] text-white font-bold text-lg px-8 py-4 rounded-xl shadow-lg hover:bg-[#0a4d56] transition-all duration-200 uppercase tracking-wide transform hover:scale-[1.02]"
                            >
                                {t("contact.submit_button")}
                            </button>
                        </form>
                    </div>

                    <!-- Contact Info -->
                    <div
                        class="space-y-8 animate__animated animate__fadeInRight"
                    >
                        <!-- Email Card -->
                        <div
                            class="bg-white rounded-2xl shadow-xl p-8 hover:shadow-2xl transition-shadow duration-300"
                        >
                            <div class="flex items-start space-x-4">
                                <div
                                    class="flex-shrink-0 w-12 h-12 bg-[#083e44] rounded-full flex items-center justify-center"
                                >
                                    <svg
                                        class="w-6 h-6 text-white"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                        ></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3
                                        class="text-xl font-bold text-[#083e44] mb-2"
                                    >
                                        {t("contact.email_title")}
                                    </h3>
                                    <a
                                        href="mailto:info@malinki.ca"
                                        class="text-lg text-[#135560] hover:text-[#083e44] transition-colors"
                                    >
                                        info@malinki.ca
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Phone Card -->
                        <div
                            class="bg-white rounded-2xl shadow-xl p-8 hover:shadow-2xl transition-shadow duration-300"
                        >
                            <div class="flex items-start space-x-4">
                                <div
                                    class="flex-shrink-0 w-12 h-12 bg-[#083e44] rounded-full flex items-center justify-center"
                                >
                                    <svg
                                        class="w-6 h-6 text-white"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                        ></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3
                                        class="text-xl font-bold text-[#083e44] mb-2"
                                    >
                                        {t("contact.phone_title")}
                                    </h3>
                                    <a
                                        href="tel:+15145551234"
                                        class="text-lg text-[#135560] hover:text-[#083e44] transition-colors"
                                    >
                                        (514) 555-1234
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Social Media Card -->
                        <div
                            class="bg-white rounded-2xl shadow-xl p-8 hover:shadow-2xl transition-shadow duration-300"
                        >
                            <div class="flex items-start space-x-4">
                                <div
                                    class="flex-shrink-0 w-12 h-12 bg-[#083e44] rounded-full flex items-center justify-center"
                                >
                                    <svg
                                        class="w-6 h-6 text-white"
                                        fill="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                                        ></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3
                                        class="text-xl font-bold text-[#083e44] mb-2"
                                    >
                                        {t("contact.social_title")}
                                    </h3>
                                    <a
                                        href="https://www.instagram.com/malinki.agence/"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="text-lg text-[#135560] hover:text-[#083e44] transition-colors"
                                    >
                                        @malinki.agence
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- CTA Box -->
                        <div
                            class="bg-gradient-to-br from-[#083e44] to-[#0a4d56] rounded-2xl shadow-xl p-8 text-white"
                        >
                            <h3 class="text-2xl font-bold mb-3">
                                {t("contact.cta_title")}
                            </h3>
                            <p class="text-lg opacity-90">
                                {t("contact.cta_text")}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <Footer />
    </body>
</html>

<script>
    // Form submission handling (you can integrate with your backend)
    document
        .getElementById("contact-form")
        ?.addEventListener("submit", function (e) {
            e.preventDefault();

            // Get form data
            const formData = new FormData(e.target as HTMLFormElement);
            const data = Object.fromEntries(formData);

            // Here you would typically send the data to your backend
            console.log("Form submitted:", data);

            // Show success message (you can customize this)
            alert(
                "Merci! Nous avons reçu votre message et nous vous contacterons bientôt.",
            );

            // Reset form
            (e.target as HTMLFormElement).reset();
        });
</script>

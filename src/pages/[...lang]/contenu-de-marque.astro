---
import { Image } from "astro:assets";
import { useTranslations } from "../../i18n/utils";
import asterxPlayToWin from "../../images/asterx-play-to-win-02-malinki-pierre-peladeau-scholarship-2023_compressed.webp";
import operaPreOpera from "../../images/opera-de-montreal-pre-opera-web-malinki-2024_compressed.webp";
import erikaGagne from "../../images/erika-gagne-ddmg_compressed.webp";
import elaineNiche from "../../images/elaine-niche.jpg";
import clientsDesktopMarque from "../../images/Logos_Clients_Malinki_ContenuMarque_2025.png";
import clientsMobileMarque from "../../images/Logos_Clients_Malinki_ContenuMarqueMobile_2025.png";
import cookItBts from "../../images/cook-it-malinki-behind-the-scenes-2022_compressed.webp";
import microsoftSurface from "../../images/microsoft-surface-cherylle-shyne-malinki-web-2024.jpg";
import villeDeLavalBts from "../../images/ville-de-laval-malinki-behind-the-scenes-web-2025_compressed.webp";
import btsKeywords from "../../images/bts-keywords-malinki-web-2022_compressed.webp";
import operaPreOperaSeries from "../../images/opera-de-montreal-pre-opera-malinki-web-series-2024_compressed.webp";
import btsGreening from "../../images/bts-greening-02-ville-de-laval-malinki-2024_compressed.webp";
import btsBrp from "../../images/bts-brp-malinki-2025_compressed.webp";

export function getStaticPaths() {
  return [
    { params: { lang: undefined } }, // French (default)
    { params: { lang: "en" } }, // English
  ];
}

const { lang } = Astro.params;
const currentLang = (lang || "fr") as "fr" | "en";
const t = useTranslations(currentLang);

const pageTitle = t("contenu_de_marque.title");

// Page configuration
const pageConfig = {
  images: {
    sidebar: asterxPlayToWin,
    main: operaPreOpera,
    testimonial1: erikaGagne,
    testimonial2: elaineNiche,
    clientsDesktop: clientsDesktopMarque,
    clientsMobile: clientsMobileMarque,
    gallery: [
      cookItBts,
      microsoftSurface,
      villeDeLavalBts,
      btsKeywords,
      operaPreOperaSeries,
      btsGreening,
      btsBrp,
    ],
  },
  youtubeVideos: [
    "https://www.youtube.com/embed/RM4PsOy1otk?playlist=RM4PsOy1otk&controls=0&rel=0&playsinline=1&modestbranding=1&cc_load_policy=0&autoplay=1&vf=1&mute=1&loop=1&iv_load_policy=3",
    "https://www.youtube.com/embed/TuUpcRVAVX8?playlist=TuUpcRVAVX8&controls=0&rel=0&playsinline=1&modestbranding=1&cc_load_policy=0&autoplay=1&vf=1&mute=1&loop=1&iv_load_policy=3",
    "https://www.youtube.com/embed/WdcX2Zb4-6E?playlist=WdcX2Zb4-6E&controls=0&rel=0&playsinline=1&modestbranding=1&cc_load_policy=0&autoplay=1&vf=1&mute=1&loop=1&iv_load_policy=3",
    "https://www.youtube.com/embed/im1d-770Qdo?playlist=im1d-770Qdo&controls=0&rel=0&playsinline=1&modestbranding=1&cc_load_policy=0&autoplay=1&vf=1&mute=1&loop=1&iv_load_policy=3",
    "https://www.youtube.com/embed/R6lNgvLdnB8?playlist=R6lNgvLdnB8&controls=0&rel=0&playsinline=1&modestbranding=1&cc_load_policy=0&autoplay=1&vf=1&mute=1&loop=1&iv_load_policy=3",
    "https://www.youtube.com/embed/yxGfgBaIWp8?playlist=yxGfgBaIWp8&controls=0&rel=0&playsinline=1&modestbranding=1&cc_load_policy=0&autoplay=1&vf=1&mute=1&loop=1&iv_load_policy=3",
  ],
  links: {
    cta: `/${currentLang === "fr" ? "" : "en/"}contact`,
    demoReel: "https://vimeo.com/912326021",
  },
};

import "../../styles/global.css";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Metadata from "../../components/Metadata.astro";
---

<html lang={currentLang} class="h-full">
  <head>
    <Metadata lang={currentLang} title={pageTitle} />
  </head>
  <body class="min-h-full w-full font-['Montserrat'] bg-[#E6F5F7]">
    <Header lang={currentLang} />

    <div class="w-full flex flex-col 2xl:max-w-[1600px] mx-auto">
      <div
        class="mx-auto pt-5 lg:pt-20 text-[#135560]"
        style="font-family: 'Rotunda Black', Montserrat, sans-serif;"
      >
        <!-- Hero Section -->
        <div
          class="px-3 lg:px-10 animate__animated animate__fast animate__fadeIn"
        >
          <div class="w-full lg:w-3/4">
            <p
              class="text-4xl md:text-5xl xl:text-6xl 2xl:text-7xl font-bold text-[#083e44] mb-8 leading-tight"
            >
              {t("contenu_de_marque.title")}
            </p>
          </div>
          <div
            class="w-full mt-5 md:mt-0 grid grid-cols-1 lg:grid-cols-2 lg:gap-8 xl:gap-16 2xl:gap-24"
          >
            <div class="w-full">
              <Image
                src={pageConfig.images.sidebar}
                alt={t("contenu_de_marque.sidebar_image_alt")}
                width={2400}
                height={1800}
                class="rounded-lg mb-8 w-full object-cover"
                loading="lazy"
              />
            </div>
            <div class="flex flex-col justify-center items-start w-full">
              <div
                class="text-lg md:text-xl xl:text-xl 2xl:text-2xl font-medium mb-8"
              >
                {t("contenu_de_marque.description_1")}
              </div>
              <div
                class="text-lg md:text-xl xl:text-xl 2xl:text-2xl font-medium mb-8"
              >
                {t("contenu_de_marque.description_2")}
              </div>
              <a
                href={pageConfig.links.cta}
                class="inline-block text-white font-bold text-base md:text-lg xl:text-xl 2xl:text-2xl px-6 md:px-8 py-3 md:py-4 rounded-xl shadow-sm transition-colors duration-200 uppercase tracking-wide"
                style="background-color: #083e44;"
              >
                {t("contenu_de_marque.cta_text")}
              </a>
            </div>
          </div>
        </div>

        <!-- Testimonial 1 -->
        <div
          class="px-3 lg:px-10 pt-16 lg:pt-28 animate__animated animate__fadeIn animate__fast flex flex-col lg:flex-row gap-8"
        >
          <div class="w-full lg:hidden">
            <Image
              src={pageConfig.images.main}
              alt={t("contenu_de_marque.main_image_alt")}
              width={2400}
              height={1800}
              class="w-full rounded-lg mt-6 object-cover"
              loading="lazy"
            />
          </div>
          <div
            class="w-full lg:w-1/2 flex flex-col items-center justify-center"
          >
            <div class="w-full">
              <p
                class="text-2xl md:text-3xl xl:text-3xl 2xl:text-4xl font-medium mb-6 mt-0"
              >
                {t("contenu_de_marque.testimonial_text")}
              </p>
            </div>
            <div
              class="w-full flex justify-start lg:justify-start items-center gap-4 mt-6"
            >
              <Image
                src={pageConfig.images.testimonial1}
                alt={t("contenu_de_marque.testimonial_image_alt")}
                width={1800}
                height={1800}
                class="w-20 h-20 2xl:w-40 2xl:h-40 object-cover rounded-full md:ml-10"
                loading="lazy"
              />
              <div
                class="mt-2 md:mt-0 text-lg md:text-xl xl:text-xl 2xl:text-2xl text-[#083e44] flex flex-col justify-center"
              >
                <p class="m-0">
                  <strong>{t("contenu_de_marque.testimonial_author")}</strong>
                  <br />
                  {t("contenu_de_marque.testimonial_role")}
                </p>
              </div>
            </div>
          </div>
          <div class="w-1/2 hidden lg:block">
            <Image
              src={pageConfig.images.main}
              alt={t("contenu_de_marque.main_image_alt")}
              width={2400}
              height={1800}
              class="w-full rounded-lg mt-6 object-cover"
              loading="lazy"
            />
          </div>
        </div>

        <!-- Products/Services Grid -->
        <div
          class="px-3 lg:px-10 pt-16 lg:pt-28 animate__animated animate__fadeIn"
        >
          <p
            class="pt-5 text-2xl md:text-3xl xl:text-4xl 2xl:text-5xl font-extrabold uppercase mb-6 col-span-2 text-[#083e44]"
          >
            {t("contenu_de_marque.prods_title")}
          </p>
          <div
            class="w-full grid grid-cols-1 lg:grid-cols-2 lg:gap-x-16 lg:gap-y-8 mb-8 mt-8"
          >
            <div>
              <p
                class="text-lg md:text-xl xl:text-2xl 2xl:text-3xl font-extrabold mb-1 uppercase text-[#083e44]"
              >
                {t("contenu_de_marque.prods_subtitle_1")}
              </p>
              <p
                class="text-base md:text-lg xl:text-xl 2xl:text-2xl font-medium"
              >
                {t("contenu_de_marque.prods_text_1")}
              </p>
            </div>
            <div>
              <p
                class="text-lg md:text-xl xl:text-2xl 2xl:text-3xl font-extrabold mb-1 uppercase text-[#083e44]"
              >
                {t("contenu_de_marque.prods_subtitle_2")}
              </p>
              <p
                class="text-base md:text-lg xl:text-xl 2xl:text-2xl font-medium"
              >
                {t("contenu_de_marque.prods_text_2")}
              </p>
            </div>
            <div>
              <p
                class="text-lg md:text-xl xl:text-2xl 2xl:text-3xl font-extrabold mb-1 uppercase text-[#083e44]"
              >
                {t("contenu_de_marque.prods_subtitle_3")}
              </p>
              <p
                class="text-base md:text-lg xl:text-xl 2xl:text-2xl font-medium"
              >
                {t("contenu_de_marque.prods_text_3")}
              </p>
            </div>
            <div>
              <p
                class="text-lg md:text-xl xl:text-2xl 2xl:text-3xl font-extrabold mb-1 uppercase text-[#083e44]"
              >
                {t("contenu_de_marque.prods_subtitle_4")}
              </p>
              <p
                class="text-base md:text-lg xl:text-xl 2xl:text-2xl font-medium"
              >
                {t("contenu_de_marque.prods_text_4")}
              </p>
            </div>
          </div>
          <a
            href={pageConfig.links.cta}
            class="inline-block text-white font-extrabold text-base md:text-lg xl:text-xl 2xl:text-2xl px-6 md:px-8 py-3 md:py-6 rounded-lg shadow transition-colors duration-200 uppercase tracking-wide"
            style="background-color: #083e44;"
          >
            {t("contenu_de_marque.prods_button_text")}
          </a>
        </div>

        <!-- Client Logos -->
        <div
          class="px-3 lg:px-10 pt-16 lg:pt-28 animate__animated animate__fadeIn flex justify-center items-center mt-20"
        >
          <Image
            src={pageConfig.images.clientsDesktop}
            alt={t("production_publicitaire.clients_image_alt")}
            width={2400}
            height={2400}
            class="w-full hidden lg:block h-full rounded-sm"
            loading="lazy"
          />
          <Image
            src={pageConfig.images.clientsMobile}
            alt={t("production_publicitaire.clients_image_alt")}
            width={2400}
            height={2400}
            class="w-full block lg:hidden h-full rounded-sm"
            loading="lazy"
          />
        </div>

        <!-- Productions (YouTube Videos) -->
        <div
          class="px-3 lg:px-10 pt-16 lg:pt-28 animate__animated animate__fadeIn"
        >
          <p
            class="text-2xl md:text-3xl xl:text-4xl 2xl:text-5xl font-extrabold uppercase text-[#083e44] mb-6"
          >
            {t("contenu_de_marque.productions_title")}
          </p>
          <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-8"
          >
            {
              pageConfig.youtubeVideos.map((videoUrl) => (
                <div class="aspect-video w-full">
                  <iframe
                    class="rounded-lg w-full h-full"
                    frameborder="0"
                    allowfullscreen
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    referrerpolicy="strict-origin-when-cross-origin"
                    src={videoUrl}
                  />
                </div>
              ))
            }
          </div>
        </div>

        <!-- Testimonial 2 -->
        <div
          class="px-3 lg:px-10 pt-16 lg:pt-28 animate__animated animate__fadeIn animate__fast"
        >
          <div class="flex flex-wrap items-center md:px-1 gap-y-8">
            <div
              class="w-full md:w-1/3 flex justify-center items-center mt-10 md:mt-0"
            >
              <Image
                src={pageConfig.images.testimonial2}
                alt={t("contenu_de_marque.testimonial_image_alt_2")}
                width={960}
                height={960}
                class="w-40 h-40 2xl:w-60 2xl:h-60 object-cover rounded-full md:ml-10"
                loading="lazy"
              />
            </div>
            <div class="w-full md:w-2/3 min-w-[320px]">
              <p
                class="text-3xl md:text-2xl xl:text-3xl 2xl:text-4xl font-semibold mb-6 mt-0 text-[#083e44]"
              >
                {t("contenu_de_marque.testimonial_text_2")}
              </p>
              <div
                class="mt-2 md:mt-0 text-xl md:text-lg xl:text-xl 2xl:text-2xl text-[#083e44] font-bold"
              >
                {t("contenu_de_marque.testimonial_author_2")}
              </div>
              <div
                class="mt-2 md:mt-0 text-lg md:text-base xl:text-lg 2xl:text-xl"
              >
                {t("contenu_de_marque.testimonial_role_2")}
              </div>
            </div>
          </div>
        </div>

        <!-- Behind the Scenes -->
        <div
          class="px-3 lg:px-10 pt-16 lg:pt-28 animate__animated animate__fadeIn"
        >
          <p
            class="text-2xl md:text-3xl xl:text-4xl 2xl:text-5xl font-extrabold uppercase text-[#083e44]"
          >
            {t("contenu_de_marque.bts_title")}
          </p>
          <p
            class="text-lg md:text-xl xl:text-xl 2xl:text-2xl font-medium mb-8 w-3/4"
          >
            {t("contenu_de_marque.bts_description")}
          </p>
          <a
            href={pageConfig.links.demoReel}
            target="_blank"
            class="mt-4 inline-block text-white font-bold text-base md:text-lg xl:text-xl 2xl:text-2xl px-6 md:px-8 py-3 md:py-4 rounded-lg shadow transition-colors duration-200 uppercase tracking-wide"
            style="background-color: #083e44;"
          >
            {t("contenu_de_marque.bts_button_text")}
          </a>
        </div>

        <!-- Image Gallery -->
        <div
          class="px-3 lg:px-10 pt-16 lg:pt-28 animate__animated animate__fadeIn"
        >
          <div class="w-full grid grid-cols-2 lg:grid-cols-4 gap-8">
            {
              pageConfig.images.gallery
                .slice(0, 4)
                .map((image, index) => (
                  <Image
                    src={image}
                    alt={t(`contenu_de_marque.row_image_${index + 1}_alt`)}
                    width={1800}
                    height={1800}
                    class="aspect-square rounded-lg object-cover"
                    loading="lazy"
                  />
                ))
            }
          </div>
          <div class="w-full grid grid-cols-1 lg:grid-cols-3 gap-4 mt-4">
            {
              pageConfig.images.gallery
                .slice(4, 7)
                .map((image, index) => (
                  <Image
                    src={image}
                    alt={t(`contenu_de_marque.row_image_${index + 5}_alt`)}
                    width={1800}
                    height={1200}
                    class="aspect-video rounded-lg object-cover mx-auto"
                    loading="lazy"
                  />
                ))
            }
          </div>
        </div>

        <!-- Final CTA -->
        <div
          class="px-3 lg:px-10 pt-16 lg:pt-28 animate__animated animate__fadeIn mb-20"
        >
          <div class="text-left">
            <p
              class="text-lg md:text-xl xl:text-2xl 2xl:text-3xl mt-6 font-extrabold"
            >
              {t("contenu_de_marque.contact_cta_text")}
            </p>
            <div class="mt-10">
              <a
                href={pageConfig.links.cta}
                class="text-lg md:text-xl xl:text-2xl 2xl:text-3xl inline-block text-white font-bold px-6 md:px-8 py-3 md:py-4 rounded-xl shadow-sm transition-colors duration-200 uppercase tracking-wide"
                style="background-color: #083e44;"
              >
                {t("contenu_de_marque.contact_cta_button_text")}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <Footer />
  </body>
</html>

---
import { Image } from "astro:assets";
import { useTranslations } from "../i18n/utils";
import publicites from "../images/Publicites.png";
import contenuDeMarque from "../images/contenu-de-marque.png";
import contenuVertical from "../images/contenu-vertical.png";
import videoclips from "../images/videoclips.png";

const { lang } = Astro.params;
const currentLang = (lang || "fr") as "fr" | "en";
const t = useTranslations(currentLang);
---

<!-- Services Section -->
<section
  class="relative w-full font-['Montserrat'] py-12 md:py-16 lg:py-20"
  data-section-type="services-section"
  id="services"
>
  <div class="w-full px-4 md:px-6 lg:px-8">
    <!-- Heading -->
    <div
      class="flex flex-col gap-6 items-center text-center mb-12 md:mb-16 lg:mb-20"
    >
      <h2
        class="font-bold text-[#083D45] text-[32px] sm:text-[36px] md:text-[44px] leading-none uppercase"
      >
        {t("sections.services.heading")}
      </h2>
      <p
        class="font-medium text-[#083D45] text-[14px] sm:text-[16px] leading-[1.2] max-w-[343px] sm:max-w-[400px] md:max-w-[452px]"
      >
        {t("sections.services.description")}
      </p>
    </div>

    <!-- Services List -->
    <div
      class="flex flex-col gap-12 md:gap-12 items-center w-full max-w-[1400px] mx-auto"
    >
      <!-- Service 1: Publicités -->
      <a
        href={`/${currentLang === "fr" ? "" : "en/"}production-publicitaire`}
        class="group flex flex-col md:flex-row gap-4 md:gap-16 items-center justify-center w-full cursor-pointer"
      >
        <div
          class="overflow-hidden rounded-lg flex-shrink-0 w-[184px] h-[120px] transition-all duration-200 ease-out hover:scale-[1.3] md:hover:scale-[1.4] hover:-rotate-[4deg] hover:-translate-y-2 group-hover:scale-[1.3] md:group-hover:scale-[1.4] group-hover:-rotate-[4deg] group-hover:-translate-y-2"
        >
          <Image
            src={publicites}
            alt={t("sections.services.service_1")}
            width={1104}
            height={720}
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
        <div class="flex items-center justify-center w-full md:w-auto">
          <h3
            class="p-0! font-bold text-[#083D45] text-[48px]! md:text-[40px]! lg:text-[64px]! 2xl:text-[96px]! leading-[1]! md:leading-none uppercase text-center md:text-left md:whitespace-nowrap select-none outline-none transition-all duration-100 ease-out hover:scale-105 group-hover:scale-105"
          >
            {t("sections.services.service_1")}
          </h3>
        </div>
      </a>

      <!-- Service 2: Contenu de marque -->
      <a
        href={`/${currentLang === "fr" ? "" : "en/"}contenu-de-marque`}
        class="group flex flex-col md:flex-row gap-4 md:gap-16 items-center justify-center w-full cursor-pointer"
      >
        <div
          class="flex items-center justify-center w-full md:w-auto order-2 md:order-1"
        >
          <h3
            class="p-0! font-bold text-[#083D45] text-[48px]! md:text-[40px]! lg:text-[64px]! 2xl:text-[96px]! leading-[1]! md:leading-none uppercase text-center md:text-left md:whitespace-nowrap select-none outline-none transition-all duration-300 ease-out hover:scale-105 group-hover:scale-105"
          >
            {t("sections.services.service_2")}
          </h3>
        </div>
        <div
          class="overflow-hidden rounded-lg flex-shrink-0 w-[184px] h-[120px] transition-all duration-200 ease-out hover:scale-[1.3] md:hover:scale-[1.4] hover:rotate-[4deg] hover:-translate-y-2 group-hover:scale-[1.3] md:group-hover:scale-[1.4] group-hover:rotate-[4deg] group-hover:-translate-y-2 order-1 md:order-2"
        >
          <Image
            src={contenuDeMarque}
            alt={t("sections.services.service_2")}
            width={1104}
            height={720}
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      </a>

      <!-- Service 3: Contenu vertical -->
      <a
        href={`/${currentLang === "fr" ? "" : "en/"}contenu-vertical`}
        class="group flex flex-col md:flex-row gap-4 md:gap-16 items-center justify-center w-full cursor-pointer"
      >
        <div
          class="overflow-hidden rounded-lg flex-shrink-0 w-[184px] h-[120px] transition-all duration-200 ease-out hover:scale-[1.3] md:hover:scale-[1.4] hover:-rotate-[4deg] hover:-translate-y-2 group-hover:scale-[1.3] md:group-hover:scale-[1.4] group-hover:-rotate-[4deg] group-hover:-translate-y-2"
        >
          <Image
            src={contenuVertical}
            alt={t("sections.services.service_3")}
            width={1104}
            height={720}
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
        <div class="flex items-center justify-center w-full md:w-auto">
          <h3
            class="p-0! font-bold text-[#083D45] text-[48px]! md:text-[40px]! lg:text-[64px]! 2xl:text-[96px]! leading-[1]! md:leading-none uppercase text-center md:text-left md:whitespace-nowrap select-none outline-none transition-all duration-300 ease-out hover:scale-105 group-hover:scale-105"
          >
            {t("sections.services.service_3")}
          </h3>
        </div>
      </a>

      <!-- Service 4: Vidéoclips -->
      <a
        href={`/${currentLang === "fr" ? "" : "en/"}video-clips`}
        class="group flex flex-col md:flex-row gap-4 md:gap-16 items-center justify-center w-full cursor-pointer"
      >
        <div
          class="flex items-center justify-center w-full md:w-auto order-2 md:order-1"
        >
          <h3
            class="p-0! font-bold text-[#083D45] text-[48px]! md:text-[40px]! lg:text-[64px]! 2xl:text-[96px]! leading-[1]! md:leading-none uppercase text-center md:text-left md:whitespace-nowrap select-none outline-none transition-all duration-300 ease-out hover:scale-105 group-hover:scale-105"
          >
            {t("sections.services.service_4")}
          </h3>
        </div>
        <div
          class="overflow-hidden rounded-lg flex-shrink-0 w-[184px]! h-[120px]! transition-all duration-200 ease-out hover:scale-[1.3] md:hover:scale-[1.4] hover:rotate-[4deg] hover:-translate-y-2 group-hover:scale-[1.3] md:group-hover:scale-[1.4] group-hover:rotate-[4deg] group-hover:-translate-y-2 order-1 md:order-2"
        >
          <Image
            src={videoclips}
            alt={t("sections.services.service_4")}
            width={1104}
            height={720}
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      </a>
    </div>
  </div>
</section>
